extends ../layouts/default

block content
  header#candidacy-header.page-header
    h1#candidacy-title.text-center ENTREVISTAS
  div.container
    div.container
      h1.text-center CANDIDATOS
      section
        .table-responsive
          table.table.table-hover.display#table_id
            thead
              th Aceitar
              th Nome
              th NÃºmero UP
              th 
            tbody
              each candidato in candidatos
                if candidato.entrevista
                  tr.success
                    if user.isAdmin
                      //Fazer aqui o formulario com as checkboxs para o admin aceitar os candidatos
                      //Falta fazer o backend para receber essa lista
                      td 
                        input(type="checkbox" name="accept" value="" + candidato._id) 
                    td
                      p #{candidato.name.full}
                    td
                      p #{candidato.numero_up}
                    td
                      p Entrevistado
                else
                  tr.danger
                    if user.isAdmin
                        //Fazer aqui o formulario com as checkboxs para o admin aceitar os candidatos
                        //Falta fazer o backend para receber essa lista
                        td 
                          input(type="checkbox" name="accept" value="" + candidato._id) 
                    td
                      p #{candidato.name.full}
                    td
                      p #{candidato.numero_up}
                    td
                      a(href="/entrevista/" + candidato._id) 
                        p Entrevistar

          if user.isAdmin
            button.btn.btn-default(type="Submit") Guardar
