					.col-sm-3
						.team-member
							a(href="./member/"+presidente._id)
								img.img-responsive.img-circle(src=presidente.photo_path, alt='presidente')
							h4 #{presidente.name.first} #{presidente.name.last}
							p.text-muted #{presidente.position}
					.col-sm-3
						.team-member
							a(href="./member/"+gestor_projetos._id)
								img.img-responsive.img-circle(src=gestor_projetos.photo_path, alt='Vice-Presidente e Gestor de Projetos')
							h4 #{gestor_projetos.name.first} #{gestor_projetos.name.last}
							p.text-muted #{gestor_projetos.position}
					.col-sm-3
						.team-member
							a(href="./member/"+gestor_eventos._id)
								img.img-responsive.img-circle(src=gestor_eventos.photo_path, alt='Vice-Presidente e Gestor de Eventos')
							h4 #{gestor_eventos.name.first} #{gestor_eventos.name.last}
							p.text-muted #{gestor_eventos.position}
					.col-sm-3
						.team-member
