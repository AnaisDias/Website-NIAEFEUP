extends ../layouts/default

block content
	header#members-header
		h2.text-center#members-title EQUIPA
	.container#members
		// DIREÇÃO
		section#direction-members
			//h3.text-center Direção
			.row
				each pato in direcao
					.col-sm-4
						.team-member
							a(href="./member/"+pato._id)
								img.img-responsive(src=pato.photo_path, alt=pato.position)
								aside.info-member
									div
										h4 #{pato.name.first} #{pato.name.last}
										em #{pato.position}
										hr
									nav.social
										if pato.linkedin
											a.fa.fa-linkedin.fa-icon-border(href=pato.linkedin, title='LinkedIn')
										if pato.github
											a.fa.fa-github.fa-icon-border(href=pato.github, title='Github')
										if pato.website
											a.fa.fa-globe.fa-icon-border(href=pato.website, title='Website')
			// MEMBROS
		section#active-members
			//h3.text-center Membros
			.row
				each member in members	
					.col-sm-3
						.team-member
							a(href="./member/"+member._id)
								img.img-responsive(src=member.photo_path, alt='membro')
								aside.info-member
									div
										h4 #{member.name.first} #{member.name.last}
										em #{member.position}
										hr
									nav.social
										if member.linkedin
											a.fa.fa-linkedin.fa-icon-border(href=member.linkedin, title='LinkedIn')
										if member.github
											a.fa.fa-github.fa-icon-border(href=member.github, title='Github')
										if member.website
											a.fa.fa-globe.fa-icon-border(href=member.website, title='Website')
				each recruta in recrutas	
					.col-sm-3
						.team-member
							a(href="./member/"+recruta._id)
								img.img-responsive(src=recruta.photo_path, alt='recruta')
								aside.info-member
									div
										h4 #{recruta.name.first} #{recruta.name.last}
										em #{recruta.position}
										hr
									nav.social
										if recruta.linkedin
											a.fa.fa-linkedin.fa-icon-border(href=recruta.linkedin, title='LinkedIn')
										if recruta.github
											a.fa.fa-github.fa-icon-border(href=recruta.github, title='Github')
										if recruta.website
											a.fa.fa-globe.fa-icon-border(href=recruta.website, title='Website')
