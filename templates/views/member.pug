extends ../layouts/default

block content   
    header.page-header
      .row#member-header
        .col-sm-5.col-xs-offset-1
          img#member-img.img-responsive.img-circle.pull-right(src=user.photo_path)
        .col-sm-6
          .colxs-offset-1
            form.login-form.form-horizontal(method='post')
              #member-name.row.flex
                h2 #{user.name.first} &nbsp
                h2 #{user.name.last}
              .row
                em #{user.position}
              nav.social
                a.fa.fa-linkedin.fa-icon-border(href=user.linkedin, title='LinkedIn')
                a.fa.fa-github.fa-icon-border(href=user.github, title='Github')
                a.fa.fa-globe.fa-icon-border(href=user.website, title='Website')
    div.container
      if !user.public
        div.container
          div.page-header
            h1 User profile not public
      else
        form.login-form.form-horizontal(method='post')
          
          div.form-group
            label.col-sm-4 About me
            div.col-sm-8
              textarea #{user.about}
          div.pull-right
            a(href="/") Return to home page

      
